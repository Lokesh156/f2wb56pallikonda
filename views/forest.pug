extends layout

block content
  h1= title
  - let items = result
  div(class="container-fluid") 
    div(class="row m-1") 
      each item in items  
        - let destination = `dispatch(\"/forest/update?id=${item._id}\")` 
        div(class="row-sm-2", class="m-1") Item #{item.forest_area}(#{item.forest_color}) is #{item.forest_dense} 
          button.btn( class="btn-primary ml-1", onclick= destination) Update 
          button.btn(class="btn-warning m1-1", onclick= destination) Detail
          button.btn(class="btn-success m1-1", onclick= destination) Delete
   
  script. 
    function dispatch(path){ 
      window.location.href=path 
    }